{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2017"],
    "rootDir": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "resolveJsonModule": true
  },
  "include": ["./src", "tsconfig.json"],
  "exclude": ["node_modules", "build"]
}
